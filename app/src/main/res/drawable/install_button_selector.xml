            <solid android:color="#FF4081"/>

            <stroke
                android:width="1dp"
                android:color="#FF4081" />
            <corners
                android:radius="80dp" />
            <padding
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
